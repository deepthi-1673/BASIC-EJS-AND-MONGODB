<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.2/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="stylehome.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    

    <title>HOME|DWARR</title>
  </head>
  <body>
    <!--navbar-->
    <nav class="navbar navbar-expand-lg bg-light navbar-text-light py-3">
        <div class="container">
            <a href="#" class="navbar-brand"><span class="text-danger">DWARR</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="#My Account" class="nav-link">My Account</a>
                    </li>
                    <li class="nav-item">
                        <a href="#support" class="nav-link">Support</a>
                    </li>
                    <li class="nav-item">
                        <a href="#search" class="nav-link">Activity</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    <!--showcase-->
    <section class="bg-dark text-light p-4 p-lg-0 pt-lg-5 text-center text-sm-start">
        <div class="container">
            <div class="d-lg-flex align-items-center justify-content-between">
                <div>
                    <h1>What's Your Next <span class="text-warning">Destination</span></h1>
                    <p class="lead my-4">
                        
                    </p>
                    <button class="btn btn-dark btn-3"><a href="login">Sign up</a>
                </div>
                <img  src="https://i.pinimg.com/originals/df/c5/d5/dfc5d5ad657f7daba6bf574f2ab0de66.png" >
            </div>
        </div>
    </section>
    <!-- offers-->
    <section class="bg-primary text-light p-5">
        <div class="container">
            <div class="d-md-flex justify-content-between align-items-center">
                <h3 class="mb-3 mb-md-0">BOOK NOW!!</h3>
                <div class="input-group news-input">
                    <input type="text" class="form-control" placeholder="Enter Email">
                    <button class="btn btn-dark btn-lg" type="button">Button</button>
                  </div>
            </div>
        </div>
    </section>
    
       
        <div class="row" id="contentPanel">
    
            <button class="btn btn-dark btn-3"><a href="/input">Add new</a></button>
        </div>

    <div class="container">
      <div class="row row-cols-3 g-3">
          
            <%if(touristsites.length>0){%>
                <% touristsites.forEach(function(row){%>
               
                <div class="card;" style="padding:20px;">
                    <div class="card-body">
                        <img src="<%= row.image %>" class="card-img-top" alt="Image Not found" width="300px" height="300px">
                        <div class="title">
                            <h1><b style="color: blue">
                                <%=row.siteName%>
                            </b></h1>
                        </div>
                        <div class="des">
                            <p>
                                <li><b>state:</b>
                                 <%=row.siteAddress.state%>
                                </li>
                                <li><b>RS:</b>
                                    <%=row.ticketPrice.adult%>
                                    <b>\-</b>
                                </li>
                            </p>
                        </div>
                        <a href=" <%= row.siteId%>"><button type="button" class="btn btn-danger"
                            style="text-decoration:white;">KNOW MORE</button></a>
                        <p>
                        <a class="btn btn-outline-danger" href="/delete/ <%= row._id %>" ><i class="bi bi-trash3-fill"></i></a>
                        <a class="btn btn-outline-danger" href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                        </p>
                    </div>
                </div>
          <% })} %>
      </div>
    </div>
    


    
    
  </body>
</html>